@model lfspinnerBeta.Models.RegisterViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/css")

<!-- VERTICAL REGISTRATION FORM -->
<div class="vertical-registration-form">

    <h4 class="dark-text form-heading">Rejestracja</h4>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "registration-form", id = "contact-form", role = "form" }))
    {
        @Html.AntiForgeryToken()
    <div>
        @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>
     <div>
        @Html.TextBoxFor(m => m.Email, new { type = "email", @class = "form-control input-box", placeholder = "Email" })
    </div>
    <div>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-box", placeholder = "Hasło" })
    </div>
    <div>
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-box", placeholder = "Powtórz hasło" })
    </div>
    <div>
        <label class="small-text pull-left">
            <input type="checkbox"> Akceptuję @Html.ActionLink("Regulamin", "Regulations", "Politics", null, new { @class = "small-text" })  oraz potwierdzam zapoznanie się z @Html.ActionLink("Zasadami wykorzystania danych osobowych", "PersonalData", "Politics", null, new { @class = "small-text" }), w tym z @Html.ActionLink("Zasadami wykorzystywania plików cookie", "Cookie", "Politics", null, new { @class = "small-text" }) .
        </label>
    </div>
    <div>
        <button class="btn btn-primary standard-button">Załóż konto</button>
    </div>

        <div>
        @Html.ActionLink("Posiadam już konto", "Login", null, null, new { @class = "small-text" })
        </div>
    }




</div>